<%- include('partials/header') %>

<div class="header">
  <div class="short-logo">
    <img src="img/short_logo.png" alt="logo" />
    <p class="header-title">Submit Page</p>
  </div>
  <div class="menu">
    <div class="label-menu">
      <div class="label-menu-items">
        <a href="/">
          Home
        </a>
      </div>
      <div class="label-menu-items">
        <a href="/submit">
          Submit a secret
        </a>
      </div>
      <div class="label-menu-items">
